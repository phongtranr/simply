{{!-- Cover Home page --}}
{{#match @custom.publication_cover "Cover"}}
<div class="home-cover relative overflow-hidden">
    {{!-- Featured Media - partials/components/media-cover.hbs --}}
    {{> "components/media-cover" background=@site.cover_image has_gradient=true alt_title=@site.title}}

    <div class="home-cover-overlay">
        <div class="home-cover-content" {{#if @custom.publication_cover_color}}style="color:{{@custom.publication_cover_color}}"{{/if}}>
            <h1 class="home-cover-title">{{#if @custom.publication_cover_title}}{{@custom.publication_cover_title}}{{else}}{{@site.title}}{{/if}}</h1>
            <p class="home-cover-description">{{#if @custom.publication_cover_description}}{{@custom.publication_cover_description}}{{else}}{{#if @site.description}}{{@site.description}}{{else}}{{t "Just a website focus on tech and life"}}{{/if}}{{/if}}</p>
            <div class="home-cover-search">
                <div class="search-field" data-ghost-search="" role="button" tabindex="0">
                    <span class="search-field-label">{{t "Search posts, tags, authors..."}}</span>
                    <span class="search-field-icon" aria-hidden="true">
                        <svg class="icon icon--search" role="presentation"><use xlink:href="#icon-search"></use></svg>
                    </span>
                </div>
            </div>
        </div>

        {{#if @custom.publication_cover_img}}
            <figure class="home-cover-figure">
                <img class="home-cover-image blur-up lazyload"
                    src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                    data-srcset="{{img_url @custom.publication_cover_img size="s"}} 300w,
                            {{img_url @custom.publication_cover_img size="m"}} 600w,
                            {{img_url @custom.publication_cover_img size="l"}} 1000w,
                            {{img_url @custom.publication_cover_img size="xl"}} 2000w"
                    data-sizes="auto"
                    width="512"
                    height="384"
                    alt="{{#if @custom.publication_cover_title}}{{@custom.publication_cover_title}}{{else}}{{@site.title}}{{/if}}"/>
            </figure>
        {{/if}}
    </div>
</div>
{{/match}}

{{!-- Featured Article Collection - ./partials/home/featured-collection.hbs --}}
{{#match @custom.publication_cover "Featured"}}{{> "home/featured-collection"}}{{/match}}

{{!-- Last 5 featured articles slider - ./partials/home/featured-slider.hbs --}}
{{#match @custom.publication_cover "Featured Slider"}}{{> "home/featured-slider"}}{{/match}}