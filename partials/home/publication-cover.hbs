{{!-- Cover Home page --}}
{{#match @custom.publication_cover "Cover"}}
<div class="relative overflow-hidden home-hero">
    <div class="home-hero-inner container mx-auto flex flex-col items-center gap-10 px-4 py-16 md:py-vw4">
        <div class="home-hero-content mx-auto flex max-w-2xl flex-col items-center gap-6 text-center" {{#if @custom.publication_cover_color}}style="color:{{@custom.publication_cover_color}}"{{/if}}>
            <h1 class="home-hero-title text-5xl lg:text-6xl">{{#if @custom.publication_cover_title}}{{@custom.publication_cover_title}}{{else}}{{@site.title}}{{/if}}</h1>
            {{#if @custom.publication_cover_description}}
                <p class="home-hero-description text-xl md:text-2xl">{{@custom.publication_cover_description}}</p>
            {{else}}
                {{#if @site.description}}
                    <p class="home-hero-description text-xl md:text-2xl">{{@site.description}}</p>
                {{else}}
                    <p class="home-hero-description text-xl md:text-2xl">{{t "Just a website focus on tech and life"}}</p>
                {{/if}}
            {{/if}}
            <div class="home-hero-search" role="presentation">
                <div class="search-field" data-ghost-search="">{{t "Search posts, tags, authors..."}}</div>
            </div>
        </div>

        {{#if @custom.publication_cover_img}}
            <figure class="home-hero-figure relative flex max-w-3xl justify-center">
                <img class="home-hero-image blur-up lazyload object-cover"
                    src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                    data-srcset="{{img_url @custom.publication_cover_img size="s"}} 300w,
                            {{img_url @custom.publication_cover_img size="m"}} 600w,
                            {{img_url @custom.publication_cover_img size="l"}} 1000w,
                            {{img_url @custom.publication_cover_img size="xl"}} 2000w"
                    data-sizes="auto"
                    width="768"
                    height="512"
                    alt="{{#if @custom.publication_cover_title}}{{@custom.publication_cover_title}}{{else}}{{@site.title}}{{/if}}"/>
            </figure>
        {{/if}}
    </div>

    {{!-- Featured Media - partials/components/media-cover.hbs --}}
    {{> "components/media-cover" background=@site.cover_image alt_title=@site.title}}
</div>
{{/match}}

{{!-- Featured Article Collection - ./partials/home/featured-collection.hbs --}}
{{#match @custom.publication_cover "Featured"}}{{> "home/featured-collection"}}{{/match}}

{{!-- Last 5 featured articles slider - ./partials/home/featured-slider.hbs --}}
{{#match @custom.publication_cover "Featured Slider"}}{{> "home/featured-slider"}}{{/match}}